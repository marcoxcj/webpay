    <div class="row mt-4 ml-5 mr-5">

        <table class="table table-striped">


            <tbody>
                <% var a = 1;
                var total=0;
                var totals = 0;
                for (let i = 0; i < otras.length; i++) {
                    
                      %>
                    <tr>
                        <th scope="row">
                            <select onchange="cantidad(this.value, '<%= otras[i].precio%>', '<%= i%>')">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </th>
                        <td><img src='<%= otras[i].img%>' alt="" style="width: 150px; height: 150px;"> </td>
                        <td>
                            <%= otras[i].descripcion%>
                        </td>
                        <td>
                            <label id="<%= i%>">$<%= otras[i].precio%></label>
                        </td>
                        <td><input class="btn btn-danger" type="button" onclick="borrar('<%= i%>')" style="cursor: pointer" value="Eliminar"></td>
                    </tr>
                    <%total = parseInt(otras[i].precio);
                    
                totals += total;}
            %>
                        <tr>
                            <th scope="row">
                                Total:
                            </th>
                            <td>

                            </td>
                            <td></td>
                            <td style="background-color: darkgray">
                                <label id="todo">$
                                    <%= totals%>
                                </label>
                            </td>
                            <td style="background-color: darkgray"><input class="btn btn-danger" type="button" style="cursor: pointer" onclick="limpiar()" value="Vaciar bolsa"></td>
                        </tr>
            </tbody>
        </table>


    </div>
    <form action="/pagar" method="post">
        <input type="text" name="precio" id="precio" value="<%= totals%>" hidden>
        <div style="width: 200px; height: 230px; margin: auto;">
